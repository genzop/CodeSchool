<h1>Listando todos los articulos</h1>
<p>
  <%= link_to "Crear articulo nuevo", new_article_path %>
</p>

<table>
  <tr>
    <th>Título</th>
    <th>Descripción</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to "Ver", article_path(article) %></td>
      <td><%= link_to "Editar", edit_article_path(article) %></td>      
      <!-- Link al metodo destroy con el protocolo DELETE y ejecutando la funcion confirm antes -->
      <td><%= link_to "Eliminar", article_path(article), method: :delete, data: {confirm: "Estas seguro?"} %></td>      
    </tr>
  <% end %>
</table>