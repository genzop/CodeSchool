<h2 align="center">Título: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Descripción:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Editar artículo", edit_article_path(@article), class: "btn btn-primary btn-xs" %>
    <%= link_to "Eliminar articulo", article_path(@article), method: :delete, data: { confirm: "¿Esta seguro que desea eliminar el articulo?" }, class: "btn btn-danger btn-xs" %>
    <%= link_to "Ver todos los artículos", articles_path, class: "btn btn-success btn-xs" %>
  </div>
</div>