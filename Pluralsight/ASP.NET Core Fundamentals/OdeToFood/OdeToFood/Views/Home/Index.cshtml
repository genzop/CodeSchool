<!-- Indica la clase del modelo que recibio del controller -->
@model OdeToFood.ViewModels.HomeIndexViewModel 

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Id</td>
                <td>@restaurant.Name</td>
                <td>
                    <!-- Crea un hipervinculo utilzando un tag helper (asp-action=actionDestino, asp-route-nombreParametro: valorParametro) -->
                    <a asp-action="Details" asp-route-id="@restaurant.Id">More</a>
                </td>
            </tr>
        }
    </table>
    <a asp-action="Create">Add Restaurant</a>
</body>
</html>